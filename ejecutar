from modelo_aves import Bodega
from interfaz import tomar_opcion, manejar_accion, mostrar_salida

def main():
    bd = Bodega()
    while True:
        op = tomar_opcion()
        res = manejar_accion(op, bd)
        if res == "salir":
            print("Adi√≥s")
            break
        mostrar_salida(res)

if __name__ == "__main__":
    main()
